<!-- myPage -->
<style>
    * {
        padding: 0;
        margin: 0;
    }
    .wrap {
        width: 100vw;
        height: 500px;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }
    table,
    th,
    td {
        padding-right: 10px;
    }
    .wrap .btnAdd {
        display: flex;
    }
</style>
<div class="wrap">
    <table class="table">
        <thead>
            <tr>
                <th scope="col" class="thead">신용카드 번호</th>
                <th scope="col" class="thead">신용카드 종류</th>
                <th scope="col" class="thead">신용카드 유효기간</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i =0; i< card.length; i++) { %>
            <tr>
                <th scope="row" class="cardId"><%= card[i].card_num %></th>
                <td class="cardDate"><%= card[i].card_type %></td>
                <td class="cardKind"><%= card[i].card_date %></td>
                <td>
                    <div class="btn">
                        <form action = "/user/card/update/<%= card[0].card_id %>" method="post">
                            <input type = "hidden" name = "pid" value = "<%=card[i].card_id %>" />
                        <button type="submit" class="btnEdit">수정</button>
                        </form>
                        <button type="submit" class="btnDel">삭제</button>
                    </div>
                    
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <button type="button" class="btnAdd" onClick="location.href='/user/addCard'">추가</button>
</div>

<div class="wrap">
    <table calss="table">
        <thead>
            <tr>
                <th scope="col" class="address">배송지 우편번호</th>
                <th scope="col" class="address">배송지 기본주소</th>
                <th scope="col" class="address">배송지 상세주소</th>
            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i< address.length; i++) { %>
            <tr>
                <th scope="row" class="addressNumber"><%= address[i].address_id %></th>
                <td class="addressAddr"><%= address[i].address_basicaddress %></td>
                <td class="addressDetail"><%= address[i].address_datailaddress %></td>
                <td>
                    <div class="btn">
                        <form action ="/address/update/<%= address[0].address_id %>" method = "post">
                            <input type = "hidden" name="pid" value = "<%=address[i].address_id%>"/>
                            <button type="button" class="addressEdit">수정</button>
                        </form>
                        <button type="submit" class="addressDel">삭제</button>
                    </div>
                </td>
            </tr>
            <% } %>
        </tbody>
    </table>
    <button type="button" class="addressAdd" onClick="location.href='/user/addParcel'">추가</button>
</div>
